{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "arrow-spacing": "error",
    "eqeqeq": "error",
    "no-use-before-define": ["error", "nofunc"],
    "no-var": "error",
    "object-shorthand": "error",
    "prefer-const": "error",
    "strict": "error",
    "template-curly-spacing": "error"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**"],
      "env": {
        "jest": true
      },
      "globals": {
        "dedent": true,
        "testRule": true
      }
    }
  ]
}
